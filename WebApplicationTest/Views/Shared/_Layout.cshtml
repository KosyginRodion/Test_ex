
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Тестовое заданиe</title>
    @Styles.Render("~/Content/Site.css")
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <span class="navbar-brand">Тестовое задание</span>
                </div>
            </div>
        </div>
    <div class="container">
       
        @using (Ajax.BeginForm("VideoSearch", new AjaxOptions { UpdateTargetId = "search-results" }))
        {
        <div class="row first-row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="search-field">
                        Поле для поиска
                    </label>
                    <input type="text" class="form-control" id="search-field" name="searchValue" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="search-hosting">Выберите хостинг</label>
                    <fieldset>
                        <select id="search-hosting" class="form-control" name="hosting">
                            <option>@WebApplicationTest.Models.HostNames.Yandex</option>
                            <option>@WebApplicationTest.Models.HostNames.Youtube</option>
                        </select>
                    </fieldset>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="pull-right button-search">
                    <input class="btn btn-default" type="submit" value="Показать" />
                    </div>
                </div>
            </div>
                }
                <div class="row">
                    <div class="col-sm-12">
                        <div id="search-results">
                            @RenderBody()
                        </div>
                        @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
                        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
                    </div>
                </div>

                <hr />

                <footer>
                    <p>&copy;Rodion Kosygin @DateTime.Now.Year - HostingParser</p>
                </footer>
            </div>
</body>
</html>




